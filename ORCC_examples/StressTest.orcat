// ----------------- mathoptest -----------------
pub fn test_mathoptest() <int> {
    int x = 6;

    x += 4;
    print("x += 4: ");
    print(itostr(x));
    print("\n");

    x -= 2;
    print("x -= 2: ");
    print(itostr(x));
    print("\n");

    x *= 3;
    print("x *= 3: ");
    print(itostr(x));
    print("\n");

    x /= 2;
    print("x /= 2: ");
    print(itostr(x));
    print("\n");

    x %= 5;
    print("x %= 5: ");
    print(itostr(x));
    print("\n");

    x &= 3;
    print("x &= 3: ");
    print(itostr(x));
    print("\n");

    x |= 8;
    print("x |= 8: ");
    print(itostr(x));
    print("\n");

    x ^= 1;
    print("x ^= 1: ");
    print(itostr(x));
    print("\n");

    x <<= 2;
    print("x <<= 2: ");
    print(itostr(x));
    print("\n");

    x >>= 1;
    print("x >>= 1: ");
    print(itostr(x));
    print("\n");

    return x;
}

